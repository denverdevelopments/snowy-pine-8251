
<section id="flight_numbers">

<h1> Flights Index </h1>
  <% @flights.each do |flight| %>
    <section id="flight-<%= flight.id %>">
      <p><%= flight.number %>Airline: <%= flight.airline.name %></p><br>
      <% flight.passengers.each do |passenger| %>
        <p><%= passenger.name %></p>
        <%= button_to "Remove Passenbger", "/passengers/#{passenger.id}", method: :delete %><br>
      <% end %>
    </section>
  <% end %>
</section>
