<section id="flight_list">
<h1> Flights Index </h1>

  <% @flights.each do |flight| %>
    <section id="flight-<%= flight.id %>">
      <p># <%= flight.number %>&emsp;Airline: <%= flight.airline.name %></p>
      <% flight.passengers.each do |passenger| %>
        <p><%= passenger.name %></p>
        <%= button_to "Remove Passenger", "/flights/#{flight.id}/passengers/#{passenger.id}", method: :delete %><br>
      <% end %><br>
    </section>
  <% end %>

</section>
